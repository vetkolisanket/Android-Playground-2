<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".misc.DynamicLauncherIconAndTextActivity">

    <ImageButton
        android:id="@+id/iBtnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_mood_24"
        android:contentDescription="Happy"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/iBtnTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_mood_bad_24"
        android:contentDescription="Sad"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/iBtnThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_outlet_24"
        android:contentDescription="Surprised"
        tools:ignore="HardcodedText" />

</LinearLayout>